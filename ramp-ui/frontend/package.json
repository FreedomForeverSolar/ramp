{
  "name": "ramp-ui",
  "version": "0.1.0",
  "description": "Native desktop app for Ramp multi-repo workflow manager",
  "main": "dist/main/index.js",
  "author": "Ramp Contributors",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"bun run dev:vite\" \"bun run dev:electron\"",
    "dev:vite": "bunx --bun vite",
    "dev:electron": "bunx wait-on http://localhost:5173 && electron .",
    "build": "bun run typecheck && bunx --bun vite build",
    "build:electron": "bunx tsc -p tsconfig.main.json",
    "package": "bun run build && bun run build:electron && bunx electron-builder",
    "lint": "bunx eslint src --ext .ts,.tsx",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-query": "^5.59.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  }
}

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Backend",
      "type": "shell",
      "command": "go build -o ramp-ui/frontend/resources/ramp-server ./cmd/ramp-ui",
      "group": "build",
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "label": "Build Electron Main",
      "type": "shell",
      "command": "bun run build:electron",
      "options": {
        "cwd": "${workspaceFolder}/ramp-ui/frontend"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "label": "Frontend Dev",
      "type": "shell",
      "command": "bun run dev",
      "options": {
        "cwd": "${workspaceFolder}/ramp-ui/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "ready in"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Desktop App (Dev)",
      "dependsOn": ["Build Backend", "Frontend Dev"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Desktop App (Full Rebuild)",
      "dependsOn": ["Build Backend", "Build Electron Main", "Frontend Dev"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
